@model IEnumerable<CvOverviewModel>

@{
    ViewData["Title"] = "View";
}


@if(Model.Count() == 0)
{
    <h1>You do not have any registered CVs.</h1>
    <h1><a asp-area="Candidates" asp-controller="Cvs" asp-action="CreateCv">Create Cv</a></h1>
}
else
{
    <h1 class="text-center">Your CVs, created with JobBoard</h1>
}

<br />
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <table class="table pull-left">
            <tbody>
                @foreach(var cv in Model)
                {
                    <tr class=" table-bordered">
                        <td class="text-center">
                            <h1> @(Html.AreaLink<CvsController>(cv.Title, nameof(CvsController.Details), cv.Id))</h1>
                            <img src="@cv.Picture" style="width:100px; height:100px; border-radius:50px " Xalt="Job Photo">
                        </td>
                    </tr>
                }

            </tbody>
        </table>
        <a class="text-center" asp-area="Candidates" asp-controller="Cvs" asp-action="CreateCv">Create a new Cv</a>
    </div>
</div>
