@using Microsoft.AspNetCore.Identity
@using JobBoard.Data.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Home" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>               
            @(Html.AreaLink<ManageController>(UserManager.GetUserName(User), nameof(ManageController.Index)))
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@(Html.AreaLink<AccountController>("Register", nameof(AccountController.Register)))</li>
        <li>@(Html.AreaLink<AccountController>("Log in", nameof(AccountController.Login)))</li>
    </ul>
}
